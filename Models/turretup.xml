<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>turretup.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>tourellemobile</object-name>
    <object-name>inttourellemobile</object-name>
    
    <!-- Objets transparents -->
    <object-name>verretourellemobile</object-name>
    <object-name>intverretourelle1</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/B-17/Models/Effects/Glass/glass</inherits-from>
    <object-name>verretourellemobile</object-name>
    <object-name>intverretourelle1</object-name>
  </effect>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>verretourellemobile</object-name>
    <object-name>intverretourelle1</object-name>
  </effect>
  
  <!-- Mitrailleuses -->
  <!-- Up turet -->
  <model>
    <name>GunsMobileLeft</name>
    <path>Aircraft/B-17/Models/Guns/guns.xml</path>
    <offsets>
      <x-m> -0.36878 </x-m>
      <y-m> -0.15310 </y-m>
      <z-m>  0.17818 </z-m>
    </offsets>
  </model>

  <model>
    <name>GunsMobileRight</name>
    <path>Aircraft/B-17/Models/Guns/guns.xml</path>
    <offsets>
      <x-m> -0.36878 </x-m>
      <y-m>  0.15310 </y-m>
      <z-m>  0.17818 </z-m>
    </offsets>
  </model>

  <!-- Animation de la tourelle du toit -->
  <animation>
    <name>TourelledeToit</name>
    <object-name>tourellemobile</object-name>
    <object-name>inttourellemobile</object-name>
    <object-name>verretourellemobile</object-name>
    <object-name>intverretourelle1</object-name>
    <object-name>GunsMobileLeft</object-name>
    <object-name>GunsMobileRight</object-name>
  </animation>
  
  <animation>
    <name>TourelledeToitGuns</name>
    <object-name>GunsMobileLeft</object-name>
    <object-name>GunsMobileRight</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>TourelledeToit</object-name>
    <property>sim/model/turret[0]/heading</property>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>TourelledeToitGuns</object-name>
    <property>sim/model/turret[0]/pitch</property>
    <center>
      <x-m> -0.20 </x-m>
      <y-m>  0.00 </y-m>
      <z-m>  0.18 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
