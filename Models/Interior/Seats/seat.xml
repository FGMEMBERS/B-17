<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>seat.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>siege</object-name>
    <object-name>accoudoirs</object-name>
    <object-name>structure</object-name>
    <object-name>socle</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>siege</object-name>
    <emission>
      <red>   0.004 </red>
      <green> 0.004 </green>
      <blue>  0.004 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>accoudoirs</object-name>
    <object-name>structure</object-name>
    <object-name>socle</object-name>
    <emission>
      <red>   0.002 </red>
      <green> 0.002 </green>
      <blue>  0.002 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

</PropertyList>
