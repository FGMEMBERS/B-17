<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList> 

  <path>rpm.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/B-17/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle1</object-name>  
    <object-name>needle2</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.9 </red>
      <green> 0.5 </green>
      <blue>  0.2 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>/engines/engine[0]/rpm</property>
    <interpolation>
      <entry><ind>    0 </ind><dep>   0 </dep></entry>
      <entry><ind>  500 </ind><dep>  13 </dep></entry>
      <entry><ind> 1000 </ind><dep>  54 </dep></entry>
      <entry><ind> 1500 </ind><dep> 105 </dep></entry>
      <entry><ind> 2000 </ind><dep> 160 </dep></entry>
      <entry><ind> 2500 </ind><dep> 215 </dep></entry>
      <entry><ind> 3000 </ind><dep> 269 </dep></entry>
      <entry><ind> 3500 </ind><dep> 322 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>needle2</object-name>
    <property>/engines/engine[1]/rpm</property>
    <interpolation>
      <entry><ind>    0 </ind><dep>   0 </dep></entry>
      <entry><ind>  500 </ind><dep>  13 </dep></entry>
      <entry><ind> 1000 </ind><dep>  54 </dep></entry>
      <entry><ind> 1500 </ind><dep> 105 </dep></entry>
      <entry><ind> 2000 </ind><dep> 160 </dep></entry>
      <entry><ind> 2500 </ind><dep> 215 </dep></entry>
      <entry><ind> 3000 </ind><dep> 269 </dep></entry>
      <entry><ind> 3500 </ind><dep> 322 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  

</PropertyList>
